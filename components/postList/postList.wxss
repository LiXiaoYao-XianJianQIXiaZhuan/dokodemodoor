/* component/postList/postList.wxss */
/* 帖子内容样式 */
.postList{
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 94%;
  }
  ::-webkit-scrollbar{
    width: 0;
    height: 0;
    color: transparent;
  }

  .postList-content{
    width: 100%;
    background-color: white;
    margin-bottom: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius: 40rpx;
    position: relative;
  }
  .postList-starTips{
    position: absolute;
    top: 40rpx;
    right: 50rpx;
    color: rgb(255, 208, 0);
    font-weight: bold;
    text-shadow: 2rpx 4rpx 2rpx rgb(121, 121, 121);
  }
  .postList-user{
    width: 100%;
    display: flex;
    align-items: center;
  }
  .postList-user-avatar{
    margin: 20rpx 20rpx 20rpx 20rpx;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
  }
  .postList-user-info{
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
  }
  .postList-nickname{
    font-size: 36rpx;
    color: black;
    margin-bottom: 10rpx;
  }
  .postList-time{
    font-size: 30rpx;
    color: #d8d8d8;
  }
  .postList-message-showed{
    display: flex;
    flex-direction: column;
    margin: 20rpx 20rpx 20rpx 20rpx;
  
  }
  .postList-text{
    width: 93%;
    font-size: 36rpx;
    color: black;
    margin: 20rpx 20rpx 20rpx 20rpx;
  }
  
  .unshowed{
    width: 93%;
    font-size: 36rpx;
    color: black;
    margin: 20rpx 20rpx 0rpx 20rpx;
    height: 250rpx;
  
    display: -webkit-box;           /*自适应布局*/ 
    word-break: break-all;          /*换行模式*/ 
    text-overflow: ellipsis;        /*超出文字用省略号代替*/ 
    overflow: hidden;               /*多出部分隐藏*/ 
    -webkit-box-orient: vertical;   /*竖直方向超出和隐藏*/ 
    -webkit-line-clamp: 4;          /*设定行数为4*/ 
  }
  .postList-showAll{
    font-size: 36rpx;
    color: #009AFF;
  }
  /* 当有多张图片时 */
  .postList-pImage{
    display: flex;
    flex-direction: row;
    justify-content: center;
    flex-wrap: wrap;
    width: 100%;
  }
  .postList-pImage .postImage{
    width: 200rpx;
    height: 200rpx;
    margin: 10rpx;
  }
  /* 当只有一张图片时 */
  .postList-pImage-only{
    width: 100%;
  }
  .postList-pImage-only .postImage{
    margin: 20rpx;
  }
  .postList-pVideo{
    margin-top: 20rpx;
  }
  .postList-button{
    width: 100%;
    display: flex;
    justify-content: space-around;
    margin-top: 20rpx;
  }
  .postList-share,.postList-comment,.postList-good{
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .functionImage{
    width: 50rpx;
    height: 50rpx;
    margin: 20rpx;
  }
  .functionText{
    font-size: 32rpx;
    color: #999999;
  }
  .postList-good-clicked .functionText{
    color: #73CFFF;
  }
  .postList-tapShareView{
    width: 100%;
    position: absolute;
    bottom: 0;
    background-color: white;
    display: flex;
    flex-direction: column;
  }
  .postList-tapShareView .btn{
    width: 100%;
    font-size: 40rpx;
    color: black;
  }