/* pages/personal/help/help.wxss */
page{
    height: 90%;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.top{
    width: 100%;
    height: 300rpx;
}
scroll-view{
    flex: 1;
    width: 100%;
    background-color: #fff;
}
.help-title{
    width: 100%;
    display: flex;
    align-items: center;
}
.help-title image{
    width: 50rpx;
    height: 50rpx;
    margin: 20rpx 20rpx 20rpx 20rpx;
}
.help-title text{
    font-size: 38rpx;
    font-weight: bold;
}
.help-problem{
    flex: 1;
    padding: 20rpx 0 20rpx 20rpx;
    border-bottom: 1px solid #c7c7c7;
    width: 720rpx;
    display: flex;
    align-items: center;
}
.help-problem text{
    font-size: 34rpx;
    color: #9b9b9b;
    margin: 20rpx 20rpx 20rpx 20rpx;
    position: relative;
}
.help-problem image{
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    right: 10rpx;
}
.feedback{
    background-color: #fff;
    position: fixed;
    bottom: 0;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border: 1px solid #c7c7c7;
    height: 10%;
}
#f1,#f2{
    flex: 1;
    font-size: 36rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
}
#f1{
    color: #6B6E77;
}
#f2{
    border-left: 1px solid #c7c7c7;
    color: #73CFFF;
}