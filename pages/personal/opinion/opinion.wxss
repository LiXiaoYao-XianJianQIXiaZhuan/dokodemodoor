page{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%;
}
.options{
  height: 90%;
  width: 96%;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.options-content{
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}
.tips{
  width: 100%;
  font-size: 34rpx;
  color: black;
  margin: 20rpx 0rpx 20rpx 0rpx;
}
.message{
  width: 100%;
  margin: 20rpx 20rpx 20rpx 20rpx;
  height: 240rpx;
  border: 1px solid #c7c7c7;
}
.options-image{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.options-image>view{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.image{
  width: 200rpx;
  height: 200rpx;
  margin-left: 20rpx;
  border: 1px dashed #c7c7c7;
  display: flex;
  align-items: center;
  justify-content: center;
}
.image image{
  width: 100rpx;
  height: 100rpx;
}
.options-contact{
  margin: 20rpx 20rpx 20rpx 20rpx;
  width: 90%;
  display: flex;
  flex-direction: column;
}
.options-contact>input{
  width: 100%;
  border: 1px solid #c7c7c7 ;
}
.btn{
  width: 90%;
  background-color: #009AFF;
  color: white;
  border-radius: 100rpx;
}
