/* pages/personal/love/love.wxss */
page{
    background-color: #F8F9FD;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.title{
    width: 100%;
    text-align: center;
    font-size: 40rpx;
    font-weight: bold;
    background-color: white;
}
/* 小标题样式 */
.tips{
    width: 100%;
    font-size: 28rpx;
    color: #d8d8d8;
    margin: 20rpx 0rpx 20rpx 20rpx;
}

/* 帖子内容样式 */
.content{
    width: 100%;
    background-color: white;
    display: flex;
    flex-direction: column;
    margin-bottom: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.user{
    width: 100%;
    display: flex;
    align-items: center;
}
.user-avatar{
    margin: 20rpx 20rpx 20rpx 20rpx;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}
.user-info{
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}
.nickname{
    font-size: 36rpx;
    color: #b4b4b4;
    margin-bottom: 10rpx;
}
.time{
    font-size: 30rpx;
    color: #d8d8d8;
}
.message-showed{
    display: flex;
    flex-direction: column;
    margin: 20rpx 20rpx 20rpx 20rpx;

}
.text-unshowed{
    width: 93%;
    font-size: 36rpx;
    color: black;
    margin: 20rpx 20rpx 0rpx 20rpx;
    height: 250rpx;
    overflow: hidden;
}
.text-showed{
    width: 93%;
    font-size: 36rpx;
    color: black;
    margin: 20rpx 20rpx 20rpx 20rpx;
    text-overflow: ellipsis;
}
.showAll{
    width: 100%;
    box-shadow:0px -9px 10px #d8d8d8;
    font-size: 36rpx;
    color: #009AFF;
    text-align: center;
}
/* 当有多张图片时 */
.pImage{
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 100%;
}
.pImage image{
    width: 200rpx;
    height: 200rpx;
    margin: 20rpx 20rpx 20rpx 20rpx;
}
/* 当只有一张图片时 */
.pImage-only{
    width: 100%;
}
.pImage-only image{
    margin: 20rpx 20rpx 20rpx 20rpx;
}
.pVideo{
    margin-top: 20rpx;
}
.button{
    width: 100%;
    display: flex;
    justify-content: space-around;
    margin-top: 20rpx;
}
.share,.comment,.good{
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-around;
}
.share image,.comment image,.good image{
    width: 50rpx;
    height: 50rpx;
    margin: 20rpx 20rpx 20rpx 20rpx;
}
.share text,.comment text,.good text{
    font-size: 32rpx;
    color: #999999;
}
.share-clicked text,.good-clicked text{
    color: #73CFFF;
}
