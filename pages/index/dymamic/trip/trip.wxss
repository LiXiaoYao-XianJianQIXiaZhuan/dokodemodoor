/* pages/index/dymamic/trip/trip.wxss */
page{
    height: 100%;
    display: flex;
    flex-direction: column;
}

/* 当日行程 */
.trip-today{
    height: 20%;
    width: 100%;
    display: flex;
    flex-direction: column;
    background-color: #00B0FA;
}
.trip-today-title{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 100%;
    flex: 1;
    margin: 40rpx 10rpx 10rpx 20rpx;

}
.trip-today-title-text{
    flex: 1;
    color: white;
    font-size: 34rpx;

}
.trip-today-title-tips{
    width: 92rpx;
    height: 42rpx;
    border-radius: 10rpx;
    background-color: white;
    color: #0092FF;
    font-size: 30rpx;
    text-align: center;
    font-weight: bold;
    margin-right: 40rpx;
}
.trip-today-title-timeplace{
    display: flex;
    flex-direction: column;
    width: 100%;
    justify-content: space-around;
    margin-bottom: 10rpx;
}
.trip-today-title-timeplace-item{
    display: flex;
    flex-direction: row;
    align-items: center;
    color: white;
    font-size: 30rpx;
    width: 100%;
    margin-left: 20rpx;
    margin-bottom: 10rpx;
}
.trip-today-title-timeplace-item image{
    height: 45rpx;
    width: 45rpx;
}

/* 行程列表 */
.trip-all{
    flex: 1;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}
.trip-list{
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 80%;
    height: 100%;

}
.trip-list-content{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 46rpx;
}
.trip-list-content-item{
    width: 100%;
    display: flex;
    flex-direction: row;
    color: rgb(149, 149, 149);
    align-items: center;
    margin-bottom: 10rpx;
}

.trip-list-content-item image{
    width: 32rpx;
    height: 32rpx;
}
.trip-list-content-title{
    color: black;
    font-weight: bold;
    font-size: 36rpx;
}
