/* pages/index/works/video/video.wxss */

#mv{
    width: 100%;
}

.message{
    width: 100%;
    display: flex;
    flex-direction: column;
    margin-top: 10rpx;
}

.title{
    width: 100%;
    font-size: 40rpx;
    font-weight: bold;
    color: black;
    margin-top: 20rpx;
    margin-left: 20rpx;
}
.user{
    width: 100%;
    display: flex;
    flex-direction: row;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}
.user>image{
    width: 50rpx;
    height: 50rpx;
    margin: 20rpx 20rpx 20rpx 20rpx;
}
.user>text{
    color: #d8d8d8;
    font-size: 30rpx;
    display: flex;
    align-items: center;
}
.tips{
    font-size: 30rpx;
    color: #d8d8d8;
    margin-left: 20rpx;
    margin-bottom: 20rpx;
}
.buttons{
    display: flex;
}
.buttons-item{
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
}

