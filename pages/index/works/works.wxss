/* 播放器按钮 */
.playLogo{
    position: absolute;
    width: 100rpx;
    height: 100rpx;
    right: 50rpx;
    top:30rpx;
    z-index: 1;
}
.playLogo>image{
    width: 100rpx;
    height: 100rpx;
    border-radius: 80rpx;
}
.playLogo>.playLogo-played{
    animation-play-state: running;
    animation:mymove 5s linear infinite;
}
.playLogo>.playLogo-paused{
    animation-play-state: paused;
}

@keyframes mymove{  
    0%{
        transform: rotate(0deg);
        box-shadow: 0rpx 0rpx 10rpx pink;
    }
    50%{
        transform: rotate(180deg);
        box-shadow: 0rpx 0rpx 40rpx pink;
    }
    100%{
        transform: rotate(360deg);
        box-shadow: 0rpx 0rpx 10rpx pink;
    }
}
