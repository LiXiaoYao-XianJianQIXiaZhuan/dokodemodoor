/* pages/index/information/information.wxss */
/* information页面总体样式 */
.information{
    width: 96%;
    height: 90%;
    background-color: white;
    border-radius: 20rpx;
    display: flex;
    flex-direction: column;
    margin-left: 18rpx;
    margin-top: 16rpx;
    padding-bottom: 20rpx;
}
/* information内容框样式 */
.information-content{
    width: 100%;
    display: flex;
    flex-direction: row;
    border-bottom: 2px solid #818181;
}
/* information页面图片样式 */
.information-content-image{
    width: 250rpx;
    height: 200rpx;
    margin: 10rpx 10rpx 10rpx 10rpx;
}

.information-content-item{
    display: flex;
    flex-direction: column;
}

/* 标题 */
.information-content-item-title{
    flex:1;
    width: 100%;
    font-size: 30rpx;
    color: #000000;
    letter-spacing: 2px;
    display: flex;
    align-items: center;
    justify-content: center;
}

/* 时间与类型栏 */
.information-content-item-timeAndtype{
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}
.information-content-item-type{
    color: #008cff;
    font-size: 28rpx;
}
.information-content-item-time{
    color: #818181;
    font-size: 24rpx;
}