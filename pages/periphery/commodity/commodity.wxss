/* pages/periphery/commodity/commodity.wxss */
/* 顶部信息栏 */
.commodity{
    height: 90%;
}
.commodity-title{
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    border-bottom: 2px solid #ebebeb;
}
.commodity-title-image{
    width: 100%;
    height: 360rpx;
}
.commodity-title-text{
    width: 96%;
    font-size: 38rpx;
    font-weight: bold;
    letter-spacing: 6rpx;
    color: black;
    margin:40rpx 30rpx 30rpx 30rpx;
}
.commodity-Price{
    width: 100%;
    display: fleX;
    flex-direction: row;
    justify-content: space-between;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}
.commodity-Price>text:first-child{
    font-size: 42rpx;
    font-weight: bold;
    letter-spacing: 6rpx;
    color: rgb(228, 60, 60);
}
.commodity-Price>text:last-child{
    font-size: 28rpx;
    letter-spacing: 6rpx;
    color: #c2c2c2;
}

/* 卖家信息 */
.commodity-user{
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 100%;
    border-bottom: 2px solid #ebebeb;
}
.commodity-user-avatar{
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    margin: 20rpx 20rpx 20rpx 20rpx;
}
.commodity-user-info{
    flex: 1;
    display: flex;
    flex-direction: column;
}
.commodity-user-info-nickName{
    width: 100%;
    font-size: 34rpx;
    font-weight: bold;
    color: black;
    letter-spacing: 6rpx;
    margin-bottom: 10rpx;
}
.commodity-user-info-fansAndfollow{
    width: 100%;
    display: flex;
    flex-direction: row;
}
.commodity-user-info-follow{
    font-size: 30rpx;
    color: #c2c2c2;
    margin-right: 10rpx;
}
.commodity-user-info-fans{
    font-size: 30rpx;
    color: #c2c2c2;
    margin-right: 10rpx;
}

/* 详情页 */
.commodity-content{
    display: flex;
    flex-direction: column;
}
.commodity-content-title{
    font-size: 40rpx;
    font-weight: bold;
    letter-spacing: 4rpx;
    text-indent: 10rpx;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}
.bottom{
    position: absolute;
    width: 100%;
    height: 10%;
    display: flex;
    flex-direction: row;
    align-items: center;
    bottom: 0px;
}
.bottom-callAndCollection{
    height: 100%;
    width: 20%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
}
.bottom-image{
    width: 50rpx;
    height: 50rpx;
    border-bottom: 10rpx;
}
.bottom-text{
    font-size: 24rpx;
    color: #c2c2c2;
}
.bottom-buy{
    flex: 1;
    height: 70%;
    border-radius: 30px;
    background-color: #009AFF;
    color: white;
    font-size: 36rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-left: 10rpx;
    margin-right: 10rpx;
}



