/* pages/news/encourage/encourage.wxss */
.encourage-goods{
    width: 100%;
    display: flex;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}

.encourage-goods>image{
    margin: 20rpx 20rpx 20rpx 20rpx;
    width: 120rpx;
    height: 90rpx;
    border-radius: 50%;
}
.encourage-content{
    width: 100%;
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}
.encourage-text{
    width: 100%;
    font-size: 30rpx;
    color: #d8d8d8;
}
.encourage-text>view{
    color: black;
}
.encourage-allGoods{
    width: 100%;
    display: flex;
    align-items: center;
    font-size: 30rpx;
    color: #009AFF;
}
.encourage-allGoods image{
    width: 30rpx;
    height: 30rpx;
    margin: 10rpx 10rpx 10rpx 10rpx;
}
.encourage-time{
    font-size: 24rpx;
    color: #d8d8d8;
}

