/* pages/news/comment/comment.wxss */
.message{
    flex: 1;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 20rpx 20rpx 20rpx 20rpx;
    position: relative;
}
.message-content>image{
    border-radius: 50%;
    width: 120rpx;
    height: 90rpx;
    margin: 20rpx 20rpx 20rpx 20rpx;
}
.message-content{
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}
.message-content>view{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    position: relative;
    margin-top: 20rpx;
}
.nickname{
    width: 100%;
    font-size: 30rpx;
    color: #d8d8d8;
    margin-bottom: 10rpx;
}
.nickname>text{
    color: black;
}
.content{
    width: 100%;
    font-size: 28rpx;
    color: #c0c0c0;
    margin-bottom: 10rpx;
}
.all{
    border-radius: 30rpx;
    background-color: #e4e4e4;
    width: 94%;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.all>view{
    margin:10rpx 20rpx 10rpx 20rpx;
}
.all>view>image{
    width: 30rpx;
    height: 30rpx;
    border: 1px solid white;
    border-radius: 50%;
}
.all>text{
    font-size: 26rpx;
    color: #b4b4b4;
}
.all>image{
    width: 30rpx;
    height: 30rpx;
    margin: 20rpx 10rpx 20rpx 10rpx;
}
.time{
    width: 100%;
    font-size: 24rpx;
    color: #d8d8d8;
}
.tips{
    position: absolute;
    right: 10rpx;
    top: 25rpx;
}