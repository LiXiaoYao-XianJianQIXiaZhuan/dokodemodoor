/* pages/news/ait/ait.wxss */
.ait{
    flex: 1;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 20rpx 20rpx 20rpx 20rpx;
    position: relative;
}
.ait-content{
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}
.ait-content>image{
    border-radius: 50%;
    width: 120rpx;
    height: 90rpx;
    margin: 20rpx 20rpx 20rpx 20rpx;
}
.ait-content>view{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    position: relative;
    margin-top: 20rpx;
}
.ait-nickname{
    width: 100%;
    font-size: 30rpx;
    color: #d8d8d8;
    margin-bottom: 10rpx;
}
.ait-nickname>text{
    color: black;
}
.ait-text{
    width: 100%;
    font-size: 28rpx;
    color: #c0c0c0;
    margin-bottom: 10rpx;
}
.ait-time{
    width: 100%;
    font-size: 24rpx;
    color: #d8d8d8;
}