
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 10%;
  background: white;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  box-shadow:0 -6rpx 10rpx skyblue;
  border-radius: 40rpx 40rpx 0 0;
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-item-indexImage-checked{
  border-color: #0092FF;
  box-shadow: 0px 0px 16rpx 0px #0092FF;
}
.tab-bar-item-indexImage-unchecked{
  border-color: #fff;
}

.tab-bar-item-indexImage-unchecked,.tab-bar-item-indexImage-checked{
  border-radius: 50%;
  border-width: 4rpx;
  border-style: solid;
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top:-38rpx;
  z-index: 999;
}

.tab-bar-item-otherImage {
  width: 54rpx;
  height: 54rpx;
}

.tab-bar-text {
  font-size: 30rpx;
}
